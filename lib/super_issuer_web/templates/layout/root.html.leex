            <% end %>-->
          </ul>
        </nav>
        <a href="/" class="phx-logo">
          <center><h1>NonceGeek Portal</h1></center>
        </a>
      </section>
    </header>
    <div id="the_header">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
