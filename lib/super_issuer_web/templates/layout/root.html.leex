        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav">
            <!--<li class="nav-item">
              <a class="nav-link active" href="/live/nodeshow" >节点浏览器 · 可视化版</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="https://weimang.cyberemd.com/explorer/#/home" >区块链浏览器</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/">证书查询</a>
            </li>
            <%# <li class="nav-item">
              <a class="nav-link active" href="https://cheatsheet.cyberemd.com" >知识库</a>
            </li> %>
            <!--<li class="nav-item">
              <a class="nav-link active" href="/live/service_lottery">抽奖服务</a>
            </li> -->
            <li class="nav-item">
              <a class="nav-link active" href="/live/app">应用浏览</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/live/event">事件浏览</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    </div>

    <%= @inner_content %>
